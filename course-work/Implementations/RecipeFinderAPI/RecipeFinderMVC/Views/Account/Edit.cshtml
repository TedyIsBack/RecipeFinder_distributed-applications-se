@model RecipeFinderMVC.Models.Accounts.EditAccountModel

@{
    ViewData["Title"] = "Редакция на профил";
}

<h2>Edit your account</h2>

<form method="post" action="/Account/Edit">
    <input type="hidden" name="Id" value="@Model.Id" />
	@Html.ValidationMessageFor(x => x.Username,"", new { @class = "text-danger" })

    <div class="form-group">
        <label for="username">Username</label>
        <input name="Username" id="username" class="form-control" value="@Model.Username" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Save</button>
    <a href="/Account/Index" class="btn btn-secondary mt-3">Back</a>
</form>
