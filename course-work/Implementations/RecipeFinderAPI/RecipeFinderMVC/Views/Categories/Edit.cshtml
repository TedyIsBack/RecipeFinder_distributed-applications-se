@model RecipeFinderMVC.Models.Categories.EditCategoryModel

@{
    ViewData["Title"] = "Edit Category";
}

<h2>Edit Category</h2>

<form action="/Categories/Edit" method="post">
    @Html.HiddenFor(m => m.Id)

    <div class="grid">
        <div class="row mb-3">
            <div class="col-2">
                <label class="form-label">@Html.DisplayNameFor(m => m.Name)</label>
            </div>
            <div class="col-6">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <label class="form-label">@Html.DisplayNameFor(m => m.Description)</label>
            </div>
            <div class="col-6">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "3" })
                @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <label class="form-label">@Html.DisplayNameFor(m => m.ShortCode)</label>
            </div>
            <div class="col-6">
                @Html.TextBoxFor(m => m.ShortCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ShortCode, null, new { @class = "text-danger" })
                @Html.ValidationMessage("Existing Category", null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <label class="form-label">@Html.DisplayNameFor(m => m.IsSeasonal)</label>
            </div>
            <div class="col-6">
                @Html.DropDownListFor(m => m.IsSeasonal,
                         new List<SelectListItem>
                {
                new SelectListItem { Text = "Yes", Value = "true" },
                new SelectListItem { Text = "No", Value = "false" }
                },
                         "Select option",
                         new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.IsSeasonal, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a href="/Categories/Index" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
